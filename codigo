        },
        "JS_Syntax": {
            "index.html": '<!DOCTYPE html><html lang="es"><head><meta charset="UTF-8"><title>JS Syntax</title><script src="script.js"></script></head><body></body></html>',
            "script.js": 'function greet() { console.log("¡Hola!"); } greet();'
        },
        "JS_Comments": {
            "index.html": '<!DOCTYPE html><html lang="es"><head><meta charset="UTF-8"><title>JS Comments</title><script src="script.js"></script></head><body></body></html>',
            "script.js": '// Esto es un comentario\nconsole.log("Comentario ignorado");'
        },
