        },
        "JS_Assignment": {
            "index.html": '<!DOCTYPE html><html lang="es"><head><meta charset="UTF-8"><title>JS Assignment</title><script src="script.js"></script></head><body></body></html>',
            "script.js": 'let c = 7; c += 3; console.log(c);'
        },
        "JS_Data_Types": {
            "index.html": '<!DOCTYPE html><html lang="es"><head><meta charset="UTF-8"><title>JS Data Types</title><script src="script.js"></script></head><body></body></html>',
            "script.js": 'let num = 42; let str = "Hola"; console.log(typeof num, typeof str);'
        },
        "JS_Functions": {
            "index.html": '<!DOCTYPE html><html lang="es"><head><meta charset="UTF-8"><title>JS Functions</title><script src="script.js"></script></head><body></body></html>',
