        },
        "JS_Number_Methods": {
            "index.html": '<!DOCTYPE html><html lang="es"><head><meta charset="UTF-8"><title>JS Number Methods</title><script src="script.js"></script></head><body></body></html>',
            "script.js": 'let num = 3.14; console.log(num.toFixed(1));'
        },
        "JS_Number_Properties": {
